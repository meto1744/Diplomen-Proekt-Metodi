@model IEnumerable<WebCocktailBar.Models.SignatureProduct.SignatureProductIndexVM>

@{
    ViewData["Title"] = "Index";
}

<h1>Signature Cocktails of our community</h1>

<p>
    <a asp-action="Create" class="btn3 btn-primary">Create your own Signature Cocktail</a>
</p>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>User</th>
                <th>Product Name</th>
                <th>Taste Name</th>
                <th>Category Name</th>
                <th>Method Of Preparation</th>
                <th>Picture</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.User)</td>
                    <td>@Html.DisplayFor(modelItem => item.ProductName)</td>
                    <td>@Html.DisplayFor(modelItem => item.TasteName)</td>
                    <td>@Html.DisplayFor(modelItem => item.CategoryName)</td>
                    <td>@Html.DisplayFor(modelItem => item.MethodOfPreparation)</td>
                    <td>
                        @if (!string.IsNullOrEmpty(item.Picture))
                        {
                            <img src="@item.Picture" class="img-thumbnail" style="max-width: auto; max-height: auto;" />
                        }
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
