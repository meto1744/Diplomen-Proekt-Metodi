@model WebCocktailBar.Models.Product.ProductCreateVM

@{
    ViewData["Title"] = "Create";
}
<body>
    <div class="container">
        <h1 class="header">Create</h1>
        <hr />
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="ProductName" class="control-label"></label>
                        <input asp-for="ProductName" class="form-control" />
                        <span asp-validation-for="ProductName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="TasteId" class="control-label"></label>
                        <select asp-for="TasteId" class="form-control text-center">
                            @foreach (var taste in Model.Tastes)
                            {
                                <option value="@taste.Id">@taste.Name</option>
                            }
                        </select>
                        <span asp-validation-for="TasteId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CategoryId" class="control-label"></label>
                        <select asp-for="CategoryId" class="form-control text-center">
                            @foreach (var category in Model.Categories)
                            {
                                <option value="@category.Id">@category.Name</option>
                            }
                        </select>
                        <span asp-validation-for="CategoryId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="MethodOfPreparation" class="control-label"></label>
                        <input asp-for="MethodOfPreparation" class="form-control" />
                        <span asp-validation-for="MethodOfPreparation" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Picture" class="control-label"></label>
                        <input asp-for="Picture" class="form-control" />
                        <span asp-validation-for="Picture" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Quantity" class="control-label"></label>
                        <input asp-for="Quantity" class="form-control" />
                        <span asp-validation-for="Quantity" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Price" class="control-label"></label>
                        <input asp-for="Price" class="form-control" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Discount" class="control-label"></label>
                        <input asp-for="Discount" class="form-control" />
                        <span asp-validation-for="Discount" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="link">
                    </div>
                </form>
                <div>
                    <a asp-action="Index" class="link"><i class="fa fa-chevron-left"></i> Back to List</a>
                </div>
            </div>
        </div>
    </div>
</body>
<style>
        body {
            background-color: #F6EEE0;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            color: #333;
        }

        .container {
            max-width: 1500px;
            margin: 0 auto;
            padding: 2rem;
            text-align: center;
        }

        .header {
            font-size: 3rem;
            margin-bottom: 2rem;
            color: #1D2B53;
        }

        .subtitle {
            font-size: 1.2rem;
            margin-bottom: 2rem;
            color: #F38A31;
        }

        .link {
            display: inline-block;
            margin-top: 1rem;
            background-color: #F38A31;
            color: #fff;
            border-radius: 0.5rem;
            padding: 0.5rem 2rem;
            transition: all 0.3s ease;
        }

        .link:hover {
            background-color: #1D2B53;
            color: #fff;
        }

        .fa {
            margin-right: 0.5rem;        
        }
        
        label.control-label {
            font-weight: bold;
            color: #1D2B53;
        }

        .form-control {
            border-radius: 0.5rem;
            padding: 0.5rem;
            border: 1px solid #ccc;
            width: 100%;
            margin-bottom: 1rem;
        }

        input[type="submit"] {
            background-color: #1D2B53;
            color: #fff;
            border: none;
            border-radius: 0.5rem;
            padding: 0.5rem 2rem;
            transition: all 0.3s ease;
            cursor: pointer;
        }

        input[type="submit"]:hover {
            background-color: #F38A31;
            color: #fff;
        }

        select.form-control {
            text-align-last: center;
        }

        hr {
            border-top: 1px solid #ccc;
            margin-top: 2rem;
            margin-bottom: 2rem;
        }
        .col-md-4 {
            margin: 0 auto;
            text-align: center
        }

        /* Media queries for responsive design */
        @@media (max-width: 768px) {
            .container {
                padding: 1rem;
            }

            .header {
                font-size: 2.5rem;
            }

            .subtitle {
                font-size: 1rem;
            }

            .form-control {
                width: 90%;
            }

            input[type="submit"] {
                padding: 0.5rem 1rem;
            }

            .col-md-4 {
                margin: 0 auto;
                text-align: center
            }
        }

       @@media (max-width: 576px) {
            .header {
                font-size: 2rem;
            }

            .subtitle {
                font-size: 0.8rem;
            }

            .form-control {
                width: 100%;
            }

            input[type="submit"] {
                padding: 0.5rem;
                font-size: 0.8rem;
            }
        }
    </style>
